<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="这是item_comment"-->
<!--        android:textSize="25sp"-->
<!--        android:gravity="center"-->
<!--        android:textColor="@color/black"/>-->

    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/praise"
        android:layout_marginRight="5dp"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_head_portrait"
        android:text="小学生"
        android:textSize="15sp"
        android:textColor="#BA000000"
        android:padding="5dp"
        android:id="@+id/tvUserName">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head_portrait"
        android:layout_below="@id/tvUserName"
        android:text="竹柏树，划重点，需要重点掌握！"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:padding="5dp"

        android:id="@+id/tvCommentContext">

    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimeOfComment"
        android:text="7-7 09:56"
        android:textSize="15sp"
        android:textColor="#BA000000"
        android:layout_toRightOf="@id/iv_head_portrait"
        android:padding="5dp"
        android:layout_below="@id/tvCommentContext"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/btnForward1"
        android:scaleType="centerCrop"
        android:src="@drawable/forward"
        android:layout_toLeftOf="@id/btnComment1"
        android:layout_below="@id/tvCommentContext"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/btnComment1"
        android:scaleType="centerCrop"
        android:src="@drawable/comment"
        android:layout_toLeftOf="@id/llPraiseOfComment"
        android:layout_below="@id/tvCommentContext"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/llPraiseOfComment"
        android:orientation="horizontal"
        android:layout_below="@id/tvCommentContext"
        android:layout_marginTop="8dp"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/btnPraise1"
            android:scaleType="centerCrop"
            android:src="@drawable/praise"
            android:layout_marginRight="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="15dp"
            android:layout_gravity="center_vertical">

        </TextView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25000000"
        android:layout_below="@id/llPraiseOfComment"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
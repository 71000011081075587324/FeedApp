<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_test">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:gravity="center_vertical"
        android:background="#f2f2f2"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbtn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rbtn_home_selector"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="首页"
            android:textColor="#2c2c2c"
            android:textSize="14sp"
            android:background="@android:color/transparent"/>

        <RadioButton
            android:id="@+id/rbtn_find"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/rbtn_find_selector"
            android:drawablePadding="3dp"
            android:textSize="14sp"
            android:text="发现"
            android:textColor="#2c2c2c"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <RadioButton
            android:id="@+id/rbtn_message"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/rbtn_message_selector"
            android:drawablePadding="3dp"
            android:textSize="14sp"
            android:text="消息"
            android:textColor="#2c2c2c"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <RadioButton
            android:id="@+id/rbtn_me"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/rbtn_me_selector"
            android:drawablePadding="3dp"
            android:textSize="14sp"
            android:text="我的"
            android:textColor="#2c2c2c"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

    </RadioGroup>


</LinearLayout>